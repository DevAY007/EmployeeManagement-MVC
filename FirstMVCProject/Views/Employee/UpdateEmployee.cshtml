@using FirstMVCProject.Dto.Employees;
@using FirstMVCProject.Migrations;
@model EmployeeDto;
@{
	ViewData["Title"] = "Edit Employee";
	var id = Context?.GetRouteValue("Id");
}


<div class="col-md-8">


	<form asp-controller="Employee" asp-action="UpdateEmployee" asp-route-id="@Model.Id" method="post">

		<div class="mb-3">
			<label class="form-label">FirstName</label>
			<input type="text" class="form-control" name="FirstName" placeholder="FirstName" required value="@Model.FirstName">
		</div>
		<div class="mb-3">
			<label class="form-label">LastName</label>
			<input type="text" class="form-control" name="LastName" placeholder="LastName" required value="@Model.LastName">
		</div>
		<div class="mb-3">
			<label class="form-label">DOB</label>
			<input type="text" class="form-control" name="DOB" placeholder="DOB" required value="@Model.DOB">
		</div>
		<div class="mb-3">
			<label class="form-label">Gender</label>
			<input type="text" class="form-control" name="Gender" placeholder="Gender" required value="@Model.Gender">
		</div>
		<div class="mb-3">
			<label class="form-label">Email</label>
			<input type="text" class="form-control" name="Email" placeholder="Email" required value="@Model.Email">
		</div>
		<div class="mb-3">
			<label class="form-label">PhoneNumber</label>
			<input type="text" class="form-control" name="PhoneNumber" placeholder="PhoneNumber" required value="@Model.PhoneNumber">
		</div>
		<div class="mb-3">
			<label class="form-label">HomeAddress</label>
			<input type="text" class="form-control" name="HomeAddress" placeholder="HomeAddress" required value="@Model.HomeAddress">
		</div>
		<div class="mb-3">
			<label class="form-label">MaritalStatus</label>
			<input type="text" class="form-control" name="MaritalStatus" placeholder="MaritalStatus" required value="@Model.MaritalStatus">
		</div>
		<td>
			<a asp-controller="Employee" asp-action="UpdateEmployee" class="btn btn-primary">Update</a>
		</td>

	</form>

</div>